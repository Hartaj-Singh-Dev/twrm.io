{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "target": "ESNext",
        "module": "ESNext",
        "resolveJsonModule": true,
        "useDefineForClassFields": true
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svelte"
    ]
}
